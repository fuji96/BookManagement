<h1>Listing reviews</h1>

<table class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>BookTitle</th>
      <th>User</th>
      <th>Body</th>
      <th>Management</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.bookdatum.title %></td>
        <td><%= review.user.username %></td>
        <td><%= review.body %></td>
        <td><%= link_to 'Show', review %>
            <%= link_to 'Edit', edit_review_path(review) %>
            <%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
