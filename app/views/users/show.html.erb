<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

 <table class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Review</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @user.reviews.each do |review| %>
      <tr>
        <td><%= review.bookdatum.title %></td>
        <td><%= review.body %></td>
        <td><%= review.updated_at %></td><br>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
