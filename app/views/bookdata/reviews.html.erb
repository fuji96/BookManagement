<h1>reviews</h1>

<table class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Date</th>
      <th>Reviewer</th>
      <th>Review</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.updated_at %></td>
        <td><%= review.user.username %></td>
        <td><%= review.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

