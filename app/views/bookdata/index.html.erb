<h1>Listing books</h1>

<table class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Authors</th>
      <th>Price</th>
      <th>Published</th>
      <th>Management</th>
    </tr>
  </thead>

  <tbody>
    <% @bookdata.each do |bookdatum| %>
      <tr>
        <td><%= bookdatum.title %></td>
        <td><%= bookdatum.authors %></td>
        <td><%= bookdatum.price %></td>
        <td><%= bookdatum.published %></td>
        <td><%= link_to 'Reviews', { :action => 'reviews', :id => bookdatum.id} %>
            <%= link_to 'Show', bookdatum %>
            <%= link_to 'Edit', edit_bookdatum_path(bookdatum) %>
            <%= link_to 'Destroy', bookdatum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New book', new_bookdatum_path %>
